					"raw": "<configResolveClass\n  cookie=\"{{outCookie}}\"\n  classId=\"trigTokenRequestor\"\n  inHierarchical=\"true\">\n  <inFilter>\n    <eq class=\"trigTokenRequestor\" property=\"triggerableDn\" value=\"org-root/ls-api11/ack\"/>\n  </inFilter>\n  <inSortProps>\n  </inSortProps>\n</configResolveClass>",
					"options": {
						"raw": {
							"language": "xml"
						}
					}
				},
				"url": {
					"raw": "https://{{central_ip}}/xmlIM/central-mgr",
					"protocol": "https",
					"host": [
						"{{central_ip}}"
					],
					"path": [
						"xmlIM",
						"central-mgr"
					]
				}
			},
			"response": []
		},
